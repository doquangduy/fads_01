<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<!-- I18n config -->
	<constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources" value="global" />
	<constant name="struts.convention.result.path" value="/"></constant>
	<constant name="struts.ui.theme" value="simple" />
	<constant name="struts.multipart.maxSize" value="1000000" />

	<!-- // common actions -->
	<package name="default" namespace="/" extends="struts-default">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" default="true" />
		</result-types>

		<!-- // ROOT -->
		<action name="">
			<result name="success" type="tiles">login-page</result>
		</action>

		<action name="login">
			<result name="success" type="tiles">login-page</result>
			<result name="error" type="tiles">login-page</result>
		</action>

		<action name="welcome" class="com.framgia.action.CustomSessionAction">
			<result name="SUCCESS_ADMIN" type="redirect">/admin/index</result>
			<result name="SUCCESS_USER" type="redirect">/homepage</result>
			<result name="Acess_Denied" type="tiles">accessDenied
			</result>
		</action>

		<action name="logout">
			<result name="success" type="tiles">login-page</result>
		</action>

	</package>

	<!-- // admin actions -->
	<package name="default-web" namespace="/admin" extends="struts-default">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" default="true" />
		</result-types>
		<action name="index" class="userAction" method="index">
			<result name="success">index</result>
			<result name="error">/errors/404.jsp</result>
		</action>

		<action name="detail" class="userAction" method="detail">
			<result name="success">detail</result>
			<result name="error">/errors/404.jsp</result>
		</action>

		<action name="newUser" class="userAction" method="newUser">
			<result name="success">addUser</result>
		</action>

		<action name="addUser" class="userAction" method="saveOrUpdateUser">
			<result name="success" type="redirect">/index</result>
			<result name="input">addUser</result>
			<result name="error">/errors/404.jsp</result>
		</action>

	</package>


	<!-- // client actions -->
	<package name="client" namespace="/" extends="json-default">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" default="true" />
		</result-types>

		<action name="viewsChangePass">
			<result>changePass</result>
		</action>

		<action name="updatePassword" class="changePassAction" method="updatePassword">
			<result name="success" type="redirect">/logout.action</result>
			<result name="input">changePass</result>
		</action>

		<action name="home" class="categoryAction" method="index">
			<result name="success">home</result>
			<result name="error">/errors/404.jsp</result>
		</action>

		<action name="homepage" class="categoryAction" method="index">
			<result name="success">categories</result>
			<result name="error">/errors/404.jsp</result>
		</action>

		<action name="news-list" class="categoryAction" method="showNews">
			<result name="success">news-list</result>
		</action>
		<action name="postnews" class="newsAction" method="addNews">
			<result name="login" type="redirect">/login</result>
			<result name="success">newspost</result>
		</action>

		<action name="news-detail" class="newsAction" method="showDetailNews">
			<result name="success">news-detail</result>
		</action>
		<action name="newspost" class="newsAction" method="saveOrUpdateNews">
			<result name="success" type="redirect">/homepage</result>
			<result name="input">newspost</result>
		</action>

		<action name="postlist" class="newsAction" method="postList">
			<result name="success">postlist</result>
			<result name="login" type="redirect">/login</result>
		</action>

		<action name="createNewsForm" class="newsAction" method="saveOrUpdateNews">
			<result name="login" type="redirect">/login</result>
			<result name="success" type="redirect">/homepage</result>
			<result name="input">newspost</result>
		</action>
		<action name="news-follow" class="userFollowNewsAction" method="followOrUnfollowNews">
			<result name="success" type="json">
				<param name="ignoreHierarchy">true</param>
			</result>
		</action>

		<action name="comment-new" class="commentAction" method="newComment">
			<result name="success" type="json">
				<param name="includeProperties">
					comment
				</param>
				<param name="ignoreHierarchy">true</param>
			</result>
			<result name="error" type="redirect">/news-list</result>
		</action>
		<action name="favorite-index" class="userFollowNewsAction"
			method="showMyFavorite">
			<result name="success">favorite-index</result>
		</action>
		<action name="news-tittle" class="newsAction" method="showTittle">
			<result name="success" type="json">
				<param name="excludeProperties">newses,news,id,userFollowNews,keyword,categories,comments,cities,comment,description,newsId</param>
			</result>
		</action>

		<action name="news-follow" class="userFollowNewsAction" method="followOrUnfollowNews">
			<result name="success" type="json">
				<param name="includeProperties">
					userFollowNews
				</param>
				<param name="ignoreHierarchy">true</param>
			</result>
		</action>
		<action name="favorite-index" class="userFollowNewsAction"
			method="showMyFavorite">
			<result name="success">favorite-index</result>
		</action>

		<action name="favorite-index" class="userFollowNewsAction"
			method="showMyFavorite">
			<result name="success">favorite-index</result>
		</action>
	</package>
</struts>
